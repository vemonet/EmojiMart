{
  "productName": "EmojiMart",
  "version": "0.3.1",
  "identifier": "io.github.vemonet.EmojiMart",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../build",
    "devUrl": "http://localhost:5173"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "cli": {
      "description": "Emoji picker popup app",
      "longDescription": "A desktop app to quickly find and pick emojis that will be copied to your clipboard",
      "afterHelp": "Use --keep to keep the existing item in your clipboard, the emoji will not be copied to the clipboard, and you will only to rely on auto-paste",
      "args": [
        {
          "name": "keep",
          "short": "k"
        },
        {
          "name": "theme",
          "short": "t",
          "takesValue": true,
          "multiple": false
        },
        {
          "name": "lang",
          "short": "l",
          "takesValue": true,
          "multiple": false
        }
      ]
    }
  },
  "app": {
    "withGlobalTauri": false,
    "security": {
      "csp": null
    },
    "windows": [
      {
        "decorations": false,
        "alwaysOnTop": true,
        "transparent": true,
        "center": true,
        "resizable": true,
        "fullscreen": false,
        "closable": true,
        "title": "üè™ Emoji Mart",
        "width": 600,
        "focus": true
      }
    ]
  }
}