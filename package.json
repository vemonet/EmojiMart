{
  "name": "emoji-mart-app",
  "version": "0.3.2",
  "license": "MIT",
  "description": "Emoji picker app for desktop. Built with the Emoji Mart web component, and packaged as a tauri app.",
  "type": "module",
  "private": true,
  "scripts": {
    "tauri": "tauri",
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "upgrade": "npx npm-check-updates -u && npm install",
    "test": "vitest",
    "lint": "eslint .",
    "fmt": "prettier \"**/*.{svelte,ts,tsx,js,cjs,yml,md,html,css}\" --ignore-path .gitignore --write",
    "internationalize": "node resources/internationalize.js"
  },
  "dependencies": {
    "@emoji-mart/data": "^1.2.1",
    "@tauri-apps/api": "^2.7.0",
    "@tauri-apps/plugin-cli": "^2.4.0",
    "@tauri-apps/plugin-clipboard-manager": "^2.3.0",
    "@tauri-apps/plugin-os": "^2.3.0",
    "emoji-mart": "^5.6.0"
  },
  "devDependencies": {
    "@sveltejs/adapter-auto": "^6.1.0",
    "@sveltejs/adapter-static": "^3.0.9",
    "@sveltejs/kit": "^2.31.1",
    "@sveltejs/vite-plugin-svelte": "^6.1.2",
    "@tauri-apps/cli": "^2.7.1",
    "@types/cookie": "^1.0.0",
    "@types/emoji-mart": "^3.0.14",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-svelte": "^3.11.0",
    "prettier": "^3.6.2",
    "prettier-plugin-svelte": "^3.4.0",
    "svelte": "^5.38.1",
    "svelte-check": "^4.3.1",
    "tslib": "^2.8.1",
    "typescript": "^5.9.2",
    "vite": "^7.1.2",
    "vitest": "^3.2.4"
  },
  "prettier": {
    "semi": false,
    "useTabs": true,
    "singleQuote": true,
    "trailingComma": "none",
    "printWidth": 100,
    "plugins": [
      "prettier-plugin-svelte"
    ],
    "overrides": [
      {
        "files": "*.svelte",
        "options": {
          "parser": "svelte"
        }
      }
    ]
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:svelte/recommended",
      "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": 2020,
      "extraFileExtensions": [
        ".svelte"
      ]
    },
    "env": {
      "browser": true,
      "es2017": true,
      "node": true
    },
    "rules": {
      "@typescript-eslint/no-explicit-any": "off"
    },
    "overrides": [
      {
        "files": [
          "*.svelte"
        ],
        "parser": "svelte-eslint-parser",
        "parserOptions": {
          "parser": "@typescript-eslint/parser"
        }
      }
    ],
    "ignorePatterns": [
      "package-lock.json"
    ]
  }
}